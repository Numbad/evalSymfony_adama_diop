{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form, {'attr': {'class': 'ui reply form'}}) }}
    <form class="ui reply form">
        <div class="field">
            {{ form_widget(form.user_id, {'attr': {'class': 'ui dropdown'}}) }}
            <div class="ui pointing label">
                Choix de l'utilisateur
            </div>
        </div>
        <div class="field">
            {{ form_widget(form.title, {'attr': {'placeholder': "Titre de la question"}}) }}
        </div>

        <div class="field">
            {{ form_widget(form.content, {'attr': {'placeholder': "Contenu de la question"}}) }}
        </div>
        {{ form_widget(form.Valider) }}
    </form>
    {{ form_end(form) }}

    {% endblock %}
